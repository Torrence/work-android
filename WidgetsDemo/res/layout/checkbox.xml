<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<TextView 
	 	android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
		android:text="请选择你常用的操作系统：" 
	/>
	<CheckBox 
		android:text="Windows" 
		android:id="@+id/checkboxlayout_chk1"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
	/>
	<CheckBox 
		android:text="Linux" 
		android:id="@+id/checkboxlayout_chk2"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
	/>
	<CheckBox 
		android:text="Unix" 
		android:id="@+id/checkboxlayout_chk3"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
	/>
	<CheckBox 
		android:text="Others" 
		android:id="@+id/checkboxlayout_chk4"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
	/>
	<LinearLayout 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
	>
		<TextView 
			android:text="你选择的项：" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
		/>
		<TextView 
			android:text="" 
			android:id="@+id/checkboxlayout_lbleResult"
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"
		/>
	</LinearLayout>
	<Button 
		android:text="确定" 
		android:id="@+id/checkboxlayout_btnOk"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
	/>
</LinearLayout>
